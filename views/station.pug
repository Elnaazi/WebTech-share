doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title Station Details
    link(rel="stylesheet", href="/CSS/Stylesheet.css")
  body
    div.navbar
      nav
        ul
          li
            a(href="/") Weathertop
          li
            a(href="/dashboard") Dashboard

    .station
      h1 Station Details

      .outer-container
        .inner-container
          ul
            p
              span=latestWeather.location
              span Lat:
              span=latestWeather.breitengrad
              span Lon:
              span=latestWeather.längengrad
        .inner-container
          ul
            p
              span.title Temperatur
              span=latestWeather.temperatur

        .inner-container
          ul
            p
              span.title Wind
              span=latestWeather.wind
        .inner-container
          ul
            p
              span.title Luftdruck
              span=latestWeather.luftdruck

    // Form to add new weather data
    form(action=`/station/${latestWeather.station_id}` method="post")
      .row
        .col
          p
            span.title Wetter
          input.form-control(type="text" name="Wetter_value" placeholder="Wetter Code")
        .col
          p
            span.title Temperatur
          input.form-control(type="text" name="Temperatur_value" placeholder="Temperatur")
        .col
          p
            span.title Windgeschwindigkeit
          input.form-control(type="text" name="Windgeschwindigkeit_value" placeholder="Windgeschwindigkeit")
        .col
          p
            span.title Luftdruck
          input.form-control(type="text" name="Luftdruck_value" placeholder="Luftdruck")
      button.btn.btn-primary(type="submit") Messung hinzufügen

    .table-container
      table
        thead
          th Wetter
          th Temperatur
          th Wind
          th Luftdruck
          th Zeitpunkt
        tbody
          each weather in allWeathers
            tr
              td=weather.wetter
              td=weather.temperatur
              td=weather.wind
              td=weather.luftdruck
              td=weather.zeitpunkt
              td

                form.delete_form(action=`/station/${latestWeather.station_id}/weather/${weather.weather_id}/delete` method="post")
                  button.btn.btn-link(type="submit")
                    svg(xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="remove-station" viewBox="0 0 16 16")
